<section>
    <div class="headerDiv">
        <h2>Our Rooms</h2>
        <div class="set">
            <h5>home</h5> <h3>></h3> <h5>rooms</h5>
        </div>
        
    </div>
    <div class="roomsArea">
        {{#if rooms}}
        {{#each rooms}}
        <div class="room">
            <div class="row">
                <div class="secImg col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="/room-images/{{img1}}.jpg" alt="First slide">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ContentSec col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <h2 class="nameOfRoom">{{name}}</h2>
                    <div class="Realprice">
                        <h6>â‚¹</h6>
                        <h1 class="offerPrice">{{OfferPrice}}</h1>
                        <h5 class="perday"><b>/</b>day</h5>
                    </div>
                    <div class="TypeSuit">
                        <h6>Type </h6>
                        <h6 class="typeOfroom">{{TyprOfRoom}}</h6>
                    </div>
                    <div class="services">
                        <h6>Services</h6>
                        <div class="typeOfservices">
                            {{#if Wifi}}
                            <span class="icon material-symbols-outlined">wifi</span>
                            {{/if}}
                            {{#if FoodService}}
                            <span class="icon material-symbols-outlined">restaurant_menu</span>
                            {{/if}}
                            {{#if Pool}}
                            <span class="icon material-symbols-outlined">pool</span>
                            {{/if}}
                            {{#if AC}}
                            <span class="icon material-symbols-outlined">ac_unit</span>
                            {{/if}}
                            {{#if TV}}
                            <span class="material-symbols-outlined">live_tv</span>
                            {{/if}}
                        </div>
                    </div>
                    <div class="places">
                        <h6>Place</h6>
                        <h6 class="place">{{Place}}</h6>
                    </div>
                    <div class="viewMore">
                        <a href="/viewRoomDetails/{{_id}}">View Details</a>

                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}
        <div class="noRoom">
            <h3>No Rooms Available</h3>
        </div>
        {{/if}}
    </div>
</section>

