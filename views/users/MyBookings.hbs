<section>
    <div class="parent">
        <div class="container">
            <div class="child">
                <div class="heading">
                    <h3>My Bookings</h3>
                </div>

                <div class="eachRow">
                    {{#each bookingDetails}}
                    <div class="card mb-3" style="max-width: 100%;">
                        <div class="row no-gutters">
                            <div class="imageSec col-md-4">
                                <img src="/room-images/{{roomImg}}.jpg" class="card-img" alt="...">
                            </div>

                            
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h3 class="card-title">{{roomName}}</h3>
                                    <div class="checkINOUT">
                                        <div class="Checkin">
                                            <h5>Check In</h5>
                                            <h5>{{checkin}}</h5>
                                        </div>
                                        <div class="Checkout">
                                            <h5>Check Out</h5>
                                            <h5>{{checkout}}</h5>
                                        </div>
                                    </div>
                                    <div class="checkINOUT">
                                        <h5 class="Bookingstatus">No:of Rooms</h5>
                                        <h5 class="Bookingstatus">{{roomCount}}</h5>
                                    </div>
                                    <div class="checkINOUT">
                                        <h5 class="Bookingstatus">Booking Status:</h5>
                                        {{#if Confirm}}
                                        <h5 class="Bookingstatus">{{Confirm}}</h5>
                                        {{else}}
                                        <h5 class="Bookingstatus">Not Confirmed</h5>
                                        {{/if}}
                                    </div>
                                    <div class="cancel">
                                        {{#if Confirm}}
                                        <a href="/cancelBooking/{{_id}}" onclick="return confirmAction()" class="cancelBTN btn btn-danger">Request Cancel Booking</a>
                                        {{else}}
                                        <a href="# " onclick="alert('This Booking is canceled!')" class="cancelBTN btn btn-primary">Booking Canceled</a>
                                        {{/if}}
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .parent {}

    .child {}

    .heading {
        margin: 3rem auto;
        text-align: center;
    }

    .heading h3 {
        font-family: Arial, Helvetica, sans-serif;
        font-weight: 600;
        font-size: 30px;
    }

    .eachRow {

        width: 100%;
        margin: 5rem 0;
    }
    .card {
        border: 3px  gray solid;
        border-radius: 1.5rem;
    }
    .imageSec {
        margin: 0 auto;
        display: flex;
        justify-content: center;
    }
    .card-img {
        margin: 3rem 0rem;
        width: 90%;
        border-radius: 1.5rem;
    }

    .checkINOUT {
        display: flex;
        padding: .5rem 0rem;
    }

    .Checkin,
    .Checkout {
        margin: 0 1rem;
    }
    .Bookingstatus {
        margin-left: 1rem;
    }
    .cancel {
        text-align: center;
        margin: 2rem 0;
    }
    .cancelBTN {
        border-radius: 10px;
        width: 50%;
    }
</style>

<script>
function confirmAction() {
  if (confirm("Are you sure you want Cancel the Booked Room?")) {
    return true; // Action allowed, link will open
  } else {
    return false; // Action canceled, link will not open
  }
}
</script>





