<section>
    <div class="parent">
        <div class="container">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 CarouselImage" src="/room-images/{{room.img1}}.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 CarouselImage" src="/room-images/{{room.img2}}.jpg"
                            alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 CarouselImage" src="/room-images/{{room.img3}}.jpg" alt="Third slide">
                    </div>
                </div>

                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <div class="prev-bg">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <div class="next-bg">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </div>
                </a>

                <ol class="carousel-indicators">
                    <img data-target="#carouselExampleIndicators" data-slide-to="0" class="thumbnail-img active"
                        src="/room-images/{{room.img1}}.jpg" data-index="0">

                    <img data-target="#carouselExampleIndicators" data-slide-to="1" class="thumbnail-img"
                        src="/room-images/{{room.img2}}.jpg" data-index="1">

                    <img data-target="#carouselExampleIndicators" data-slide-to="2" class="thumbnail-img"
                        src="/room-images/{{room.img3}}.jpg" data-index="2">
                </ol>
            </div>
        </div>
        <div class="container">
            <div class="content">
                <div class="main">
                    <div class="name">
                        <h1>{{room.name}}</h1>
                    </div>
                    <div class="booknowtop">

                        {{#if ClickedId}}
                        <a href="/bookNowClicked/{{room._id}}/{{ClickedId}}" class="name">Book Now</a>
                        {{else}}
                        <a href="/bookNow/{{room._id}}" target="_blank" class="name">Book Now</a>
                        {{/if}}
                    </div>
                </div>
                <div class="Address col-md-6 col-lg-4">
                    <p>{{room.Address}}</p>
                </div>
                <div class="price">
                    <div class="PriceOnly">
                        <p class="offerprice">₹{{room.OfferPrice}}</p>
                        <p class="RealPrice">₹{{room.RealPrice}}</p>
                    </div>
                    <p class="perday">Per Room Per Day</p>
                </div>

                {{!-- Rattings --}}
                <div class="rating">
                    <div class="RatingBox">
                        <div class="sectionRating">
                            <p>3.8</p>
                            <i class="fa-solid fa-star"></i>
                        </div>
                    </div>
                    <p class="RatingsCount">
                        ( 32 Ratings )
                    </p>
                </div>
                {{!-- Rattings --}}


                <div class="book">
                    {{#if ClickedId}}
                    <a href="/bookNowClicked/{{room._id}}/{{ClickedId}}" class="name">Book Now</a>
                    {{else}}
                    <a href="/bookNow/{{room._id}}" target="_blank" class="name">Book Now</a>
                    {{/if}}
                </div>

                {{!-- Ameniteis --}}
                <div class="Amenities">
                    <p>Amenities</p>
                    <div class="AmenitiesItems">
                        <div class="row">

                            <div class="Items">
                                
                                <p>Free Wifi</p>
                            </div>

                            {{#if room.wifi}}
                            <div class="Items">
                               
                                <p>Free Wifi</p>
                            </div>
                            {{/if}}

                            {{#if room.FoodService}}
                            <div class="Items">
                                <p>Food Service</p>
                            </div>
                            {{/if}}

                            {{#if room.Pool}}
                            <div class="Items">

                                <p>Swimming Pool</p>
                            </div>
                            {{/if}}

                            {{#if room.AC}}
                            <div class="Items">

                                <p>AC</p>
                            </div>
                            {{/if}}

                            {{#if room.TV}}
                            <div class="Items">

                                <p>TV</p>
                            </div>
                            {{/if}}
                        </div>

                    </div>

                </div>
            </div>

            {{!-- Ameniteis --}}




            <div class="discription">
                <h3>Description</h3>
                <p>{{room.description}}</p>
            </div>
            <div class="facilities">
                <h3>Facilities</h3>
                <div class="facilitiesIcon">
                    <div class="IconDetails">
                        {{#if room.wifi}}
                        <img src="/images/wifi.png" alt="ffds" class="iconFacitilites">
                        <h4 class="iconText">Free Wifi</h4>
                        {{/if}}
                    </div>
                    <div class="IconDetails">
                        {{#if room.FoodService}}
                        <img src="/images/restaurant.png" alt="fds" class="iconFacitilites">
                        <h4 class="iconText">Food Servies</h4>
                        {{/if}}
                    </div>
                    <div class="IconDetails">
                        {{#if room.Pool}}
                        <img src="/images/swim.png" alt="dsf" class="iconFacitilites">
                        <h4 class="iconText">Swimming Pool</h4>
                        {{/if}}
                    </div>
                    <div class="IconDetails">
                        {{#if room.AC}}
                        <img src="/images/air-conditioner.png" alt="ds" class="iconFacitilites">
                        <h4 class="iconText">AC</h4>
                        {{/if}}
                    </div>
                    <div class="IconDetails">
                        {{#if room.TV}}
                        <img src="/images/tv.png" alt="dfds" class="iconFacitilites">
                        <h4 class="iconText">TV</h4>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="Address">
                <h3 class="addressHead">Address:</h3>
                <div class="adress">
                    <p>{{room.Address}}</p>
                    <p>{{room.Place}}</p>
                    <p>{{room.State}}</p>
                    <p>{{room.District}}</p>
                    <p>{{room.ZipCode}}</p>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
    </div>
</section>

