<section>
    <div class="parent">
        <div class="container">
            <div class="CarouselArea ">
                <div id="carouselExampleControls" class="carousel slide col-xs-8 col-sm-8 col-md-8 col-lg-8 col-xl-8"
                    data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/room-images/{{room.img1}}.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/room-images/{{room.img2}}.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/room-images/{{room.img3}}.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <div class="content">
                <div class="main">
                    <div class="name">
                        <h1>{{room.name}}</h1>
                    </div>
                    <div class="booknowtop">
                        {{#if ClickedId}}
                        <a href="/bookNowClicked/{{room._id}}/{{ClickedId}}" class="name">Book Now</a>
                        {{else}}
                        <a href="/bookNow/{{room._id}}" class="name">Book Now</a>
                        {{/if}}
                    </div>
                </div>
                <div class="price">
                    <h2 class="offerprice">₹{{room.OfferPrice}}</h2>
                    <h5 class="perday">/day</h5>
                    <h5 class="RealPrice">₹{{room.RealPrice}}</h5>
                </div>
                <div class="book">
                    <a href="/bookNow/{{room._id}}" class="booknow">Book Now</a>
                </div>
                <div class="discription">
                    <h3>Description</h3>
                    <p>{{room.description}}</p>
                </div>
                <div class="facilities">
                    <h3>Facilities</h3>
                    <div class="facilitiesIcon">
                        <div class="IconDetails">
                            {{#if room.wifi}}
                            <img src="/images/wifi.png" alt="ffds" class="iconFacitilites">
                            <h4 class="iconText">Free Wifi</h4>
                            {{/if}}
                        </div>
                        <div class="IconDetails">
                            {{#if room.FoodService}}
                            <img src="/images/restaurant.png" alt="fds" class="iconFacitilites">
                            <h4 class="iconText">Food Servies</h4>
                            {{/if}}
                        </div>
                        <div class="IconDetails">
                            {{#if room.Pool}}
                            <img src="/images/swim.png" alt="dsf" class="iconFacitilites">
                            <h4 class="iconText" >Swimming Pool</h4>
                            {{/if}}
                        </div>
                        <div class="IconDetails">
                            {{#if room.AC}}
                            <img src="/images/air-conditioner.png" alt="ds" class="iconFacitilites">
                            <h4 class="iconText">AC</h4>
                            {{/if}}
                        </div>
                        <div class="IconDetails">
                            {{#if room.TV}}
                            <img src="/images/tv.png" alt="dfds" class="iconFacitilites">
                            <h4 class="iconText">TV</h4>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <div class="Address">
                    <h3 class="addressHead">Address:</h3>
                    <div class="adress">
                        <p>{{room.Address}}</p>
                        <p>{{room.Place}}</p>
                        <p>{{room.State}}</p>
                        <p>{{room.District}}</p>
                        <p>{{room.ZipCode}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>

