<section class="section">
    <div class="parent">
        <div class="container">
            <div class="topSection col-xs-12">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="/images/bkg1a.jpg" alt="First slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/bkg2.jpg" alt="Second slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/bkg3.jpg" alt="Third slide">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="/images/bk4.jpg" alt="Third slide">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>

            <div class="part2">
                <div class="row">
                    <div class="text-center col-md-12">
                        <div class="yelloWelcome">WELCOME</div>
                        <div class="subWelcome">Experience the greatest for your holidays</div>
                    </div>

                    <div class="col-md-4 col-md-pull-7 mt-5 pt-5">
                        <div class="booking-form">
                            <form action="/checkAvailability" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <span class="form-label">Your Destination</span>
                                    {{!-- <input class="form-control" type="text"
                                        placeholder="Enter a destination or hotel name"> --}}
                                    <select class="inputForm form-control" name="destination" required>
                                        <option value="" selected="true" disabled="disabled">Select Destination</option>

                                        {{#each locations}}
                                        <option value="{{Place}}">{{Place}}</option>
                                        {{/each}}


                                    </select>
                                    <span class="select-arrow"></span>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span class="form-label">Check In</span>
                                            <input name="checkin" min="{{formatedToday}}" id="Checkin" value=""
                                                onchange="DateChange()" class="form-control" type="date" required>

                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <span class="form-label">Check out</span>
                                            <input name="checkout" min="{{formatedTomorow}}" id="checkout"
                                                class="form-control" type="date" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <span class="form-label">Rooms</span>
                                            <select name="rooms" class="form-control">
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <span class="form-label">Guests</span>
                                            <select name="guests" class="form-control">
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                                <option value="5">5</option>
                                            </select>
                                            <span class="select-arrow"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-btn">
                                    <button class="submit-btn">Check availability</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="nextToForm col-md-7">
                        <h3>Explore The Most Beautiful In The Hotel</h3>
                        <h5>INTRODUCING</h5>
                        <h4>MMT Luxe Selections</h4>
                        <h6>Escape to the eoitome of luxury, packed with signature amenities and services.</h6>
                        <a href="" class="btn FindSelection">Find Suit</a>
                        <div class="specialisationDiv">
                            <h5>OUR SPECIALIZATION</h5>
                            <div class=" text-center col-xs-12 iconsDIV">
                                <div class="row">
                                    <div class="Icons">
                                        <img class="imageIcons" src="/images/wifi.png" /><br>
                                        <h5>Free Wifi</h5>
                                    </div>
                                    <div class="Icons">
                                        <img class="imageIcons" src="/images/swim.png" /><br>
                                        <h5>Premium Pool</h5>
                                    </div>
                                    <div class="Icons">
                                        <img class="imageIcons" src="/images/hot-cup.png" /><br>
                                        <h5>Coffee Maker</h5>
                                    </div>
                                    <div class="Icons">
                                        <img class="imageIcons" src="/images/ac.png" /><br>
                                        <h5>AC</h5>
                                    </div>
                                    <div class="Icons">
                                        <img class="imageIcons" src="/images/tv.png" /><br>
                                        <h5>4K TV</h5>
                                    </div>
                                    <div class="Icons">
                                        <img class="imageIcons" src="/images/restaurant.png" /><br>
                                        <h5>Restaurant</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{!-- image scroll horizontal --}}
            {{#if bookingDetails}}
            <div class="wrapedOnHorizontalScroll">
                <h4 class="RecentlyViewed">Recently Viewed</h4>
                <div class="imageScrollWrapper container">
                    {{#each bookingDetails}}
                    <div class="ScrollImgDiv">
                        <a href="/viewClickedRoomDetails/{{_id}}">
                            <img class="ScrollImageInDiv" src="/room-images/{{roomImg}}.jpg" alt="">
                            <div class="ScrollHotel ml-2">{{roomName}} <br> {{destination}}</div>
                        </a>
                    </div>
                    {{/each}}

                </div>
            </div>
            {{/if}}
        </div>
    </div>
</section>

