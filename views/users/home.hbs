<script>

    function DateChange() {
        var checkin = document.getElementById("Checkin").value
        //console.log(checkin)
        var date = new Date(checkin);
        date.setDate(date.getDate() + 1);

        const yyyy = date.getFullYear();
        let mm = date.getMonth() + 1; // Months start at 0!
        let dd = date.getDate();
        if (dd < 10) {
            dd = "0" + dd
        }

        const formatedTomorow = yyyy + '-' + mm + '-' + dd;



        document.getElementById("checkout").value = formatedTomorow;
        //alert(formatedTomorow)
        //console.log(formatedTomorow)
    }


</script>