<section>
    <div class="parent">
        <div class="container">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 CarouselImage" src="/room-images/{{room.img1}}.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 CarouselImage" src="/room-images/{{room.img2}}.jpg"
                            alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 CarouselImage" src="/room-images/{{room.img3}}.jpg" alt="Third slide">
                    </div>
                </div>

                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <div class="prev-bg">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <div class="next-bg">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </div>
                </a>

                <ol class="carousel-indicators">
                    <img data-target="#carouselExampleIndicators" data-slide-to="0" class="thumbnail-img active"
                        src="/room-images/{{room.img1}}.jpg" data-index="0">

                    <img data-target="#carouselExampleIndicators" data-slide-to="1" class="thumbnail-img"
                        src="/room-images/{{room.img2}}.jpg" data-index="1">

                    <img data-target="#carouselExampleIndicators" data-slide-to="2" class="thumbnail-img"
                        src="/room-images/{{room.img3}}.jpg" data-index="2">
                </ol>
            </div>
        </div>
        <div class="container">
            <div class="content">
                <div class="main">
                    <div class="name">
                        <h1>{{room.name}}</h1>
                    </div>

                </div>
                <div class="Address col-md-6 col-lg-4">
                    <p>{{room.Address}}</p>
                </div>
                <div class="price">
                    <div class="PriceOnly">
                        <p class="offerprice">₹{{room.OfferPrice}}</p>
                        <p class="RealPrice">₹{{room.RealPrice}}</p>
                    </div>
                    <p class="perday">Per Room Per Day</p>
                </div>

                {{!-- Rattings --}}
                <div class="rating">
                    <div class="RatingBox">
                        <div class="sectionRating">
                            <p>3.8</p>
                            <img class="RatingStar1" src="/images/Rooms/Star.png" alt="">
                        </div>
                    </div>
                    <p class="RatingsCount">
                        ( 32 Ratings )
                    </p>
                </div>
                {{!-- Rattings --}}




                {{!-- Ameniteis --}}
                <div class="Amenities">
                    <p>Amenities</p>
                    <div class="AmenitiesItems">
                        <div class="row">

                            {{!-- <div class="Items">
                                <img src="/images/Rooms/internet.png" class="ImageAmenities" alt="">
                                <p>Free Wifi</p>
                            </div> --}}

                            {{#if room.Wifi}}
                            <div class="Items">
                                <img src="/images/Rooms/internet.png" class="ImageAmenities" alt="">
                                <p>Free Wifi</p>
                            </div>
                            {{/if}}

                            {{#if room.FoodService}}
                            <div class="Items">
                                <img src="/images/Rooms/restaurant (1).png" class="ImageAmenities" alt="">
                                <p>Food Service</p>
                            </div>
                            {{/if}}

                            {{#if room.Pool}}
                            <div class="Items">
                                <img src="/images/Rooms/swimming-pool.png" class="ImageAmenities" alt="">
                                <p>Swimming Pool</p>
                            </div>
                            {{/if}}

                            {{#if room.AC}}
                            <div class="Items">
                                <img src="/images/Rooms/air-conditioner.png" class="ImageAmenities" alt="">
                                <p>AC</p>
                            </div>
                            {{/if}}

                            {{#if room.TV}}
                            <div class="Items">
                                <img src="/images/Rooms/smart-tv.png" class="ImageAmenities" alt="">
                                <p>TV</p>
                            </div>
                            {{/if}}
                        </div>

                    </div>

                </div>
            </div>

            {{!-- Ameniteis --}}




            <div class="discription">
                <p class="DescriptionHead">Description</p>
                <p class="Desc">{{room.description}}</p>
            </div>

            <hr class="HRline">

            {{#if room.Verification}}

            <td id="{{room._id}}td">
                <p class="ActionStatus">Approved</p>
                {{!-- <a class="btn btn-warning" href="/admin/viewRoom/{{_id}}">View Room</a> --}}
                <input type="text" id="{{room._id}}" value="{{room.name}}" hidden>
                <button onclick="RejectRoom('{{room._id}}')" class="btn btn-danger">Block Room</button>
            </td>

            {{else}}
            <td id="{{room._id}}td">
                <p class="ActionStatus">Blocked</p>
                {{!-- <a class="btn btn-warning" href="/admin/viewRoom/{{_id}}">View Room</a> --}}
                <input type="text" id="{{room._id}}" value="{{room.name}}" hidden >
                <button onclick="AcceptRoom('{{room._id}}')" class="btn btn-success">Unblock Room</button>
            </td>
            {{/if}}


        </div>
    </div>
</section>

